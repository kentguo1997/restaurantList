<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">
          尋找餐廳： 
          <a href="/restaurants/new">新增餐廳</a>
        </h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns d-flex flex-wrap justify-content-center">
        {{#each restaurants}}
          <div class="card mb-3 mx-3 text-secondary" style="width: 240px;">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="items d-flex justify-content-end align-items-center">
              <a href="/restaurants/{{this._id}}/edit" class="mx-2">Edit</a>
              <a href="/restaurants/{{this._id}}" class="mx-2">Detail</a>
              <form action="/restaurants/{{this._id}}/delete" method="POST" class="mx-2 mb-2">
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>