<h1 class="mb-0 restaurant-show-title">新增餐廳</h1>
<div class="container d-flex flex-column justify-content-center align-items-center mt-1">
  <form action="/restaurants" method="POST">
    <!--Restaurant Name -->
    <input type="text" placeholder="請輸入餐廳名稱" name="name">

    <!--Category -->
    <div class="category mt-4" style="max-width: 240px;">
      <input list="category" class="form-control mt-0" name="category" id="categories" placeholder="請選擇餐廳類別或自行輸入">
      <datalist id="category">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    <!-- Image -->
    <div class="image mt-4 d-flex flex-column" style="max-width: 320px;">
      <input type="url" id="img" name="image" class="mt-0" placeholder="請輸入餐廳照片網址">
    </div>

    <!-- location -->
    <input type="text" placeholder="請輸入餐廳地址" name="location" style="display: block;" class="mt-4">

    <!-- phone -->
    <input type="text" placeholder="請輸入餐廳電話" name="phone" style="display: block;" class="mt-4">

    <!-- google_map -->
    <div class="google_map mt-4 d-flex flex-column" style="max-width: 320px;">
      <input type="url" id="map" name="google_map" class="mt-0" placeholder="請輸入Google Map網址">
    </div>

    <!-- rating -->
    <div class="rating mt-4 d-flex flex-column">
      <input type="number" id="quantity" name="rating" min="1.0" max="5.0" step="0.1" class="mt-0" placeholder="請給予餐廳評分 (介於 1 到 5 分)">
    </div>

    <!-- description -->
    <div class="description d-flex flex-column mt-4 mb-4">
      <textarea id="description" name="description" class="mt-0" rows="10" cols="30" placeholder="請填寫餐廳簡介..."></textarea>
    </div>

    <!-- Create Button -->
    <div class="button text-center">
      <button type="submit">Create</button>
    </div>
  </form>
</div>