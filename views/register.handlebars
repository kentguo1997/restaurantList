<div class="row mt-n5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <form action="/users/register" method="POST">
        <div class="form-group mt-3 mb-2">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="e.g. Lisa Chang">
        </div>
        <div class="form-group mt-3 mb-2">
          <label for="email">Email</label><span class="required" style="color: red;">*</span>
          <input type="email" id="email" name="email" class="form-control" placeholder="example@email.com" required>
        </div>
        <div class="form-group mt-3 mb-2">
          <label for="password">Password</label><span class="required" style="color: red;">*</span>
          <input type="password" id="password" name="password" class="form-control" placeholder="password" required>
        </div>
        <div class="form-group mt-3 mb-2">
          <label for="confirmPassword">Confirm Password</label><span class="required" style="color: red;">*</span>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="enter your password again" required>
        </div>
        <div class="register-btn text-center mt-3">
          <button type="submit" class="form-control btn btn-info btn-block mb-2">Register</button>
        </div>
      </form>
      <p class="lead mt-4">
        Already have an Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>