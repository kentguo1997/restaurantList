<h1 class="mb-0 restaurant-show-title">更新餐廳資訊</h1>
<div class="container d-flex flex-column justify-content-center align-items-center mt-1">
  <form action="/restaurants/{{restaurant._id}}/?_method=PUT" method="POST">

    <!--Restaurant Name -->
    <div class="name d-flex flex-column">
      <label for="name" class="mb-0">餐廳名稱</label>
      <input type="text" id="name" value="{{restaurant.name}}" name="name" class="mt-0">
    </div>

    <!--Category -->
    <div class="category mt-4" style="max-width: 240px;">
      <label for="categories" class="mb-0">餐廳類別</label>
      <input list="category" id="categories" value="{{restaurant.category}}" name="category" class="form-control mt-0" >
      <datalist id="category">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>酒吧</option>
        <option>咖啡</option>
      </datalist>
    </div>

    <!-- Image -->
    <div class="image mt-4 d-flex flex-column" style="max-width: 320px;">
      <label for="img" class="mb-0">餐廳照片網址</label>
      <input type="url" id="img" value="{{restaurant.image}}" name="image" class="mt-0">
    </div>

    <!-- location -->
    <div class="location d-flex flex-column mt-4">
      <label for="location" class="mb-0">餐廳地址</label>
      <input type="text" id="location" value="{{restaurant.location}}" name="location" class="mt-0">
    </div>

    <!-- phone -->
    <div class="phone d-flex flex-column mt-4">
      <label for="phone" class="mb-0">餐廳電話</label>
      <input type="text" id="phone" value="{{restaurant.phone}}" name="phone" class="mt-0">
    </div>

    <!-- google_map -->
    <div class="google_map mt-4 d-flex flex-column" style="max-width: 320px;">
      <label for="map" class="mb-0">Google Map網址</label>
      <input type="url" id="map" value="{{restaurant.google_map}}" name="google_map" class="mt-0">
    </div>

    <!-- rating -->
    <div class="rating mt-4 d-flex flex-column">
      <label for="quantity" class="mb-0">餐廳評分(介於 1 到 5 分)</label>
      <input type="number" id="quantity" value="{{restaurant.rating}}" name="rating" min="1.0" max="5.0" step="0.1" class="mt-0">
    </div>

    <!-- description -->
    <div class="description mt-4 mb-4 d-flex flex-column">
      <label class="mb-0" for="description">餐廳簡介</label>
      <textarea id="description"name="description" class="mt-0" rows="10" cols="30">{{restaurant.description}}</textarea>
    </div>

    <!-- Update Button -->
    <div class="button text-center">
      <button type="submit">Update</button>
    </div>
  </form>
</div>